apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: keycloak-instance-{{ target_env }}
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/aalexx-le/duli-infrastructure
    targetRevision: main
    path: helm/keycloak-instance
    helm:
      releaseName: keycloak-instance-{{ target_env }}
      valueFiles:
        - values.yaml
        - values-{{ target_env }}.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: keycloak-system
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - RespectIgnoreDifferences=true
  # Ignore operator-managed fields that cause sync drift
  ignoreDifferences:
    - group: k8s.keycloak.org
      kind: Keycloak
      jsonPointers:
        - /status
        - /metadata/annotations
        - /metadata/finalizers
        - /spec/serviceMonitor
      jqPathExpressions:
        - .spec.unsupported
        - .spec.instances
    - group: k8s.keycloak.org
      kind: Keycloak
      managedFieldsManagers:
        - keycloak-operator
    - group: k8s.keycloak.org
      kind: KeycloakRealmImport
      managedFieldsManagers:
        - keycloak-operator
