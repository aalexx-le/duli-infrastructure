---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: rabbitmq-instance-{{ target_env }}
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ git_repo_url }}
    targetRevision: {{ git_branch | default('main') }}
    path: helm/rabbitmq
    helm:
      valueFiles:
        - values.yaml
        - values-{{ target_env }}.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ target_env }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=false
  # Ignore operator-managed fields that cause sync drift
  ignoreDifferences:
    - group: rabbitmq.com
      kind: RabbitmqCluster
      jsonPointers:
        - /status
        - /metadata/generation
        - /metadata/resourceVersion
        - /metadata/annotations
        - /metadata/finalizers
        - /metadata/uid
        - /metadata/creationTimestamp
        - /metadata/labels/app.kubernetes.io~1instance
        - /spec/delayStartSeconds
        - /spec/override
        - /spec/secretBackend
        - /spec/tls
        - /spec/terminationGracePeriodSeconds
        - /spec/persistence/storage
        - /spec/affinity/podAntiAffinity/preferredDuringSchedulingIgnoredDuringExecution/0/weight
