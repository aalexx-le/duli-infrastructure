apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: keycloak-operator
  namespace: argocd
spec:
  project: default
  source:
    # Official Keycloak Operator Manifests
    repoURL: https://github.com/keycloak/keycloak-k8s-resources
    targetRevision: 24.0.4
    path: kubernetes/kubernetes.yml
  destination:
    server: https://kubernetes.default.svc
    namespace: keycloak-system
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
