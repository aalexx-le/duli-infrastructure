---
# ============================================================================
# ANSIBLE VAULT - SENSITIVE CREDENTIALS
# ============================================================================
# 
# Setup:
#   1. cp vault.yml.example vault.yml
#   2. Fill in your actual values
#   3. ansible-vault encrypt vault.yml
#
# Usage:
#   - Edit: ansible-vault edit group_vars/all/vault.yml
#   - Generate sealed secrets: 
#     ansible-playbook playbooks/generate_sealed_secrets.yml -e target_environment=staging --ask-vault-pass
#
# Security:
#   - Never commit unencrypted vault.yml to Git
#   - Use different passwords for staging vs production
#   - Minimum 32 characters recommended
#   - Generate strong passwords: openssl rand -base64 32
#
# ============================================================================

# Cloud Provider
vault_do_api_token: "dop_v1_your_digitalocean_token_here"

# Cloudflare API Token (Secret: cloudflare-api-token)
vault_cloudflare_api_token: "your_cloudflare_api_token_here"
vault_cloudflare_account_id: "your_cloudflare_account_id_here"

# Redis (Secret: redis-credentials)
vault_redis_password: "your_redis_password_here"

# PostgreSQL superuser (Secret: postgres-credentials)
# Note: Username is always "postgres" for CNPG - only password is configurable
# Application user (duli-admin) is auto-created by CNPG with auto-generated password
vault_postgres_password: "your_postgres_password_here"

# Keycloak Database (Secret: keycloak-db-credentials)
vault_keycloak_db_username: "keycloak"
vault_keycloak_db_password: "your_keycloak_db_password_here"

# GitOps Tools
vault_argocd_admin_password: "your_argocd_admin_password_here"

# Monitoring Stack (Secret: grafana-admin-credentials)
vault_grafana_admin_password: "your_grafana_admin_password_here"

# Keycloak OAuth Identity Providers (Secret: keycloak-oauth-credentials)
vault_oauth_google_client_id: "your_google_client_id.apps.googleusercontent.com"
vault_oauth_google_client_secret: "your_google_client_secret_here"

# Keycloak Backend Service Client Secret (Secret: keycloak-backend-service)
vault_keycloak_backend_service_secret: "your_keycloak_backend_service_secret_here"
