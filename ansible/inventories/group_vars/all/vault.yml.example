---
# ============================================================================
# ANSIBLE VAULT - SENSITIVE CREDENTIALS
# ============================================================================
# 
# Setup:
#   1. cp vault.yml.example vault.yml
#   2. Fill in your actual values
#   3. ansible-vault encrypt vault.yml
#
# Usage:
#   - Edit: ansible-vault edit group_vars/all/vault.yml
#   - Generate sealed secrets: 
#     ansible-playbook playbooks/generate_sealed_secrets.yml -e target_environment=staging --ask-vault-pass
#
# Security:
#   - Never commit unencrypted vault.yml to Git
#   - Use different passwords for staging vs production
#   - Minimum 32 characters recommended
#   - Generate strong passwords: openssl rand -base64 32
#
# ============================================================================

# Cloud Provider
vault_do_api_token: "dop_v1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"


# Cloudflare API Token (Secret: cloudflare-api-token)
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone.DNS (Edit), Zone.Zone Settings (Edit)
vault_cloudflare_api_token: "change-me-to-your-cloudflare-api-token"

# Cloudflare Account ID
# Get from: https://dash.cloudflare.com/ -> select account -> Account ID
vault_cloudflare_account_id: "change-me-to-your-cloudflare-account-id"

# Redis (Secret: redis-credentials)
vault_redis_password: "change-me-to-secure-redis-password-min-32-chars"

# PostgreSQL Superuser (Secret: postgres-credentials)
# Used by CloudNativePG operator for cluster management
vault_postgres_password: "change-me-to-secure-postgres-superuser-password-min-32-chars"

# PostgreSQL Application User (Secret: database-app)
# Used by applications (Keycloak, Backend, AI Service, Scheduler)
vault_postgres_app_username: "duli_user"
vault_postgres_app_password: "change-me-to-secure-app-db-password-min-32-chars"

# GitOps Tools
vault_argocd_admin_password: "change-me-to-secure-argocd-password"
vault_rancher_bootstrap_password: "change-me-to-secure-rancher-password"

# Keycloak OAuth Identity Providers (Secret: keycloak-oauth-credentials)
# Google OAuth - register at https://console.cloud.google.com/
vault_oauth_google_client_id: "change-me-to-your-google-client-id.apps.googleusercontent.com"
vault_oauth_google_client_secret: "change-me-to-your-google-client-secret"

# Keycloak Backend Service Client Secret (Secret: keycloak-backend-service)
# Confidential client secret for NestJS backend token exchange and validation
# Generate with: openssl rand -base64 32
vault_keycloak_backend_service_secret: "change-me-to-secure-backend-client-secret-min-32-chars"
