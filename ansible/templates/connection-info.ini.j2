# Infrastructure Connection Information - {{ target_namespace | upper }} Environment
# Generated: {{ ansible_date_time.iso8601 }}

[postgresql]
host = {{ postgres_host }}
port = {{ postgres_port }}
username = {{ postgres_user }}
password = {{ postgres_pass }}
database = duli_db
connection_url = postgresql://{{ postgres_user }}:{{ postgres_pass }}@{{ postgres_host }}:{{ postgres_port }}/duli_db

[redis]
host = {{ redis_host }}
port = {{ redis_port }}
protocol = redis
password = {{ redis_password | default('') }}
connection_url = {% if redis_password %}redis://:{{ redis_password }}@{{ redis_host }}:{{ redis_port }}{% else %}redis://{{ redis_host }}:{{ redis_port }}{% endif %}

[rabbitmq]
host = {{ rabbitmq_host }}
port = {{ rabbitmq_port }}
management_port = {{ rabbitmq_mgmt_port }}
username = {{ rabbitmq_user }}
password = {{ rabbitmq_pass }}
amqp_url = amqp://{{ rabbitmq_user }}:{{ rabbitmq_pass }}@{{ rabbitmq_host }}:{{ rabbitmq_port }}/
management_ui = http://{{ rabbitmq_host }}:{{ rabbitmq_mgmt_port }}

[keycloak]
host = {{ keycloak_host }}
port = {{ keycloak_port }}
protocol = http
admin_url = http://{{ keycloak_host }}:{{ keycloak_port }}/admin
realm_url = http://{{ keycloak_host }}:{{ keycloak_port }}/realms

[argocd]
host = {{ argocd_host }}
port = {{ argocd_port }}
url = https://{{ argocd_host }}:{{ argocd_port }}

[rancher]
host = {{ rancher_host }}
port = {{ rancher_port }}
url = https://{{ rancher_host }}:{{ rancher_port }}
